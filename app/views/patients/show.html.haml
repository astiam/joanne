            %td
              %strong Pisquiatra tratante
            %td Hospital Evangélico
          %tr
            %td
              %strong Terapeuta
            %td Hospital Evangélico


      %h5 Otras características
      %ul.inline-list
        %li
          %strong Lugar de nacimiento
          Montevideo, Uruguay
        %li
          %strong Nacionalidad
          Montevideo, Uruguay
        %li
          %strong Escolaridad
          Nivel terciario

  %section
    %p.title{:data => {"section-title" => true}}
      %a{:href => "#data"} Datos clínicos
    .content{:data => {"section-content" => true}}
      %h5 Antecedentes familiares

      %ul.no-bullet
        %li
          %i.icon-check
          Violencia doméstica

      %hr

      .row

        .large-6.columns

          %h5 Antecedentes por parte paterna

          %ul.no-bullet
            %li
              %i.icon-check
              Epilepsia
            %li
              %i.icon-check
              Jubilación compulsiva

        .large-6.columns

          %h5 Antecedentes por parte materna

          %ul.no-bullet
            %li
              %i.icon-check
              Epilepsia
            %li
              %i.icon-check
              Jubilación compulsiva
            %li
              %i.icon-check
              Violencia sexual

