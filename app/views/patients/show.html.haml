        %li
          %i.icon-leaf{:style => "color: #4e9a06; font-size: larger;"}
        %li
          %i.icon-eye{:style => "color: #a40000; font-size: larger;"}
        %li
          %strong
            %i.icon-user{:style => "font-size: larger;"}
            Atendido por Silvia Pelaez
        %li
          %span
            %i.icon-location{:style => "font-size: larger;"}
            Montevideo, Uruguay

      %hr

