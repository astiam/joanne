            %th Género
            %th Raza
            %th Teléfono
            %th Teléfono auxiliar
            %th Celular
            %th Cédula de identidad
            %th Domicilio
            %th Estado civil

        %tbody
          %tr
            %td= @patient.telephone
            %td= @patient.telephone_aux
            %td= @patient.cellphone
            %td= @patient.id_card
            %td= @patient.address

      %h5 Asistencia médica
      %table
        %tbody
          %tr
            %td
              %strong Mutualista
            %td Hospital Evangélico
          %tr
            %td
              %strong Emergencia móvil
            %td Hospital Evangélico
