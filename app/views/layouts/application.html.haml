!!! 5

%html
  %head
    %title Ultimo Recurso
    %meta{ :content => "Administración de Último Recurso", :name => "description" }
    %meta{ :content => "Astiam", :name => "author" }
    %link{ :href =>'http://fonts.googleapis.com/css?family=Open+Sans', :rel => 'stylesheet', :type => 'text/css'}
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags

  %body

    / Header and Nav

    .row
      .large-12.columns.top
        %nav.top-bar
          %section.top-bar-section
            %ul.right
              %li.has-dropdown
                %a{:href => "#"}
                  %i.icon-vcard
                  Eduardo Delgaldo
                %ul.dropdown
                  %li
                    %a{:href => "#"}
                      %i.icon-cog
                      Preferencias
                  %li.logout
                    %a{:href => destroy_user_session_path, :data => {'method' => 'delete'}}
                      %i.icon-logout
                      Salir

        .large-9.columns.large-centered
    / End Header and Nav

    .row

      / Main Content Section

      #main.large-10.push-2.columns

        = yield

      / Nav Sidebar

      - if user_signed_in?

        #sidebar.large-2.pull-10.columns

          .section-container.accordion{:data => {"section" => "accordion"}}
            %section.section
              %p.title
                %i.icon-users
                Usuarios
              .content
                %ul.side-nav
                  %li
                    %a{:href => patients_path} Pacientes
                  %li
                    %a{:href => users_path} Operadores
            %section.section
              %p.title
                %i.icon-users
                Reportes
              .content
                %ul.side-nav
                  %li
                    %a{:href => users_path} Pacientes
                  %li
                    %a{:href => users_path} Operadores
            %section.section
              %p.title
                %i.icon-users
                Administración
              .content
                %ul.side-nav
                  %li
                    %a{:href => users_path} Pacientes
                  %li
                    %a{:href => users_path} Operadores

      / Footer

      %footer.row
        .large-13.columns
          %hr
          .row
            .large-6.columns
              %p &copy; Copyright no one at all. Go to town.
