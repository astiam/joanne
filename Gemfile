    # Web Server
    gem 'puma'

    # Log Heroku activity
    gem 'rails_log_stdout', github: 'heroku/rails_log_stdout', group: :production

    # Compile assets in production Heroku environment
    gem 'rails3_serve_static_assets', github: 'heroku/rails3_serve_static_assets'

    # New Relic
    gem 'newrelic_rpm'
end

